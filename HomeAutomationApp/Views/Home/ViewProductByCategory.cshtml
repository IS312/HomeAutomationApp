@model IEnumerable<HomeAutomationApp.Models.Product>

@{
    ViewData["Title"] = "ViewProductByCategory";
}
<div class="text-center">
    <h1 class="display-4">Product in Given Category</h1>
</div>
<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="card">
            <img class="card-img-top" src="../../bookphotos/@item.ProductID@item.Extension" alt="Card image">
            <div class="card-body">
                <h5 class="card-title">@item.ProductTitle</h5>
                <a class="btn btn-warning" asp-action="BookDetails" asp-route-id="@item.ProductID">View Product Details</a>
            </div>
        </div>
    }
</div>